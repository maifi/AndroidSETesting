<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollViewMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:entries="@array/hsm"/>

            <requestFocus />
       

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plaintext" />

        <EditText
            android:id="@+id/tf_plaintext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="bla" />

        <Button
            android:id="@+id/button_encrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt" 
            android:onClick="ClickedEncrypt"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciphertext(base64enc)" />

        <EditText
            android:id="@+id/tf_cipher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/button_decrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt"  
            android:onClick="ClickedDecrypt"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypted data" />

        <EditText
            android:id="@+id/tf_decryptedtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/button_getcert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GetCert"  
            android:onClick="ClickedGetCert"/>

        <EditText
            android:id="@+id/tf_packet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />
        
         <Button
            android:id="@+id/button_exportcert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export Certificate"  
            android:onClick="ClickedExportCert"/>

    </LinearLayout>

</ScrollView>